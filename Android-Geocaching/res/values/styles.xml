<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DashboardButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DashboardButtonText" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dashboard_text_color</item>
    </style>

    <style name="FavoritesFolderRowTitle">
        <item name="android:textSize">@dimen/text_size_list_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/favorites_text_color_selector</item>
    </style>

    <style name="FavoritesFolderRowSubText">
        <item name="android:textSize">@dimen/text_size_list_status</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/favorites_text_color_selector</item>
    </style>

    <style name="FavoritesFolderRowDistanceText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/favorites_text_color_selector</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="Theme.Geocaching" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Geocaching.ActionBarStyle</item>
        <item name="actionBarStyle">@style/Geocaching.ActionBarStyle</item>

        <item name="android:actionBarTabStyle">@style/Geocaching.ActionBar.TabStyle</item>
    	<item name="actionBarTabStyle">@style/Geocaching.ActionBar.TabStyle</item>

        <item name="absForceOverflow">true</item>
    </style>

    <style name="Geocaching.ActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Geocaching.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Geocaching.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/Geocaching.ActionBar.SubtitleTextStyle</item>
        <item name="subtitleTextStyle">@style/Geocaching.ActionBar.SubtitleTextStyle</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="displayOptions">showHome|showTitle</item>
    </style>
    
    <style name="Geocaching.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dashboard_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Geocaching.ActionBar.SubtitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/dashboard_text_color</item>
        <item name="android:textStyle">italic</item>
    </style>
        
    <style name="Geocaching.ActionBar.TabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <!-- <item name="android:padding">4dip</item> -->
    </style>
    
    <style name="Geocaching.ActionBar.TabTextStyle" parent="@style/Widget.Sherlock.ActionBar.TabText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Geocaching.TextMessage" parent="Widget">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dashboard_text_color</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>
